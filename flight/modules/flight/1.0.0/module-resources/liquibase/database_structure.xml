<databaseChangeLog xmlns='http://www.liquibase.org/xml/ns/dbchangelog'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd'>

	<changeSet id='flight_structure' author='diego.coronel'>
		
		<sql>
			CREATE SCHEMA flight;
		</sql>
	
		<createTable schemaName="flight" tableName="airplane">
			<column name="id" type="java.sql.Types.INTEGER" autoIncrement="true" startWith="1">
				<constraints primaryKey="true" primaryKeyName="airplane_pkey" nullable="false" />
			</column>
			<column name="maximum_places" type="java.sql.Types.INTEGER">
				<constraints nullable="false"/>
			</column>
			<column name="available_places" type="java.sql.Types.INTEGER">
				<constraints nullable="false"/>
			</column>
		</createTable>
		
	</changeSet>
	
</databaseChangeLog>